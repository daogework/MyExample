                </DataTrigger>
                <DataTrigger Binding="{Binding Value, Converter={local:正或负}}" Value="负">
                    <Setter TargetName="PART_Editor" Property="Foreground" Value="#C00000"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <DataTemplate  x:Key="CenterRadioButtonText">
            <TextBlock Text="{Binding Content, Mode=OneTime, RelativeSource={RelativeSource AncestorType=RadioButton}}" 
                       HorizontalAlignment="Center" Margin="-20,0,0,0" VerticalAlignment="Center" />
        </DataTemplate>

        <DataTemplate  x:Key="SanyuanSiXiHeader">
            <RadioButton Content="{Binding GridColumn.FieldName, Mode=OneTime, RelativeSource={RelativeSource AncestorType=dxg:GridColumnHeader}}" 
            GroupName="{Binding GridColumn.Tag, Mode=OneTime, RelativeSource={RelativeSource AncestorType=dxg:GridColumnHeader}}"  
                         ContentTemplate="{StaticResource CenterRadioButtonText}"
                Checked="BottomRadioButton_Checked" Initialized="BottomRadioButton_Initialized" 
                HorizontalContentAlignment="Stretch" VerticalAlignment="Center" Margin="0,0,0,-3"/>
        </DataTemplate>

        <DataTemplate  x:Key="ZXHHeader">
            <RadioButton Content="{Binding GridColumn.FieldName, Mode=OneTime, RelativeSource={RelativeSource AncestorType=dxg:GridColumnHeader}}" 
            GroupName="{Binding GridColumn.Tag, Mode=OneTime, RelativeSource={RelativeSource AncestorType=dxg:GridColumnHeader}}"  
                         ContentTemplate="{StaticResource CenterRadioButtonText}"
                Checked="ZXHRadioButton_Checked"  Margin="0,0,0,-3"
                HorizontalContentAlignment="Stretch" VerticalAlignment="Center" />
        </DataTemplate>

        <DataTemplate x:Key="AnimalHeader">
            <CheckBox Content="{Binding GridColumn.FieldName, Mode=OneTime, RelativeSource={RelativeSource AncestorType=dxg:GridColumnHeader}}" 
                      HorizontalContentAlignment="Stretch" 
                      Click="AnimalCheckBox_Checked" Initialized="BottomCheckButton_Initialized" HorizontalAlignment="Center" VerticalAlignment="Center">
                <CheckBox.ContentTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Content, Mode=OneTime, RelativeSource={RelativeSource AncestorType=CheckBox}}" 
                       HorizontalAlignment="Center"  VerticalAlignment="Center" 
                                   Width="{Binding GridColumn.Width.Value, RelativeSource={RelativeSource AncestorType=dxg:GridColumnHeader}}" Padding="20,0,0,0"  />
                    </DataTemplate>
                </CheckBox.ContentTemplate>
            </CheckBox>
        </DataTemplate>

        <DataTemplate x:Key="NormalCell">
            <dxe:TextEdit Name="PART_Editor" EditValue="{Binding Value}" HorizontalAlignment="Center"/>
        </DataTemplate>

